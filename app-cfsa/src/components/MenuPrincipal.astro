---
import Logo from '../../public/logo-cfsa.svg';
---

<!-- ============================================ -->
<!--                 Navigation                   -->
<!-- ============================================ -->

<header id="cs-navigation">
    <div class="cs-container">
        <!--Nav Logo-->
        <a href="/" class="cs-logo" aria-label="back to home">
            <img src={Logo.src} alt="logo" aria-hidden="true" decoding="async">
        </a>
        <!--Navigation List-->
        <nav class="cs-nav" role="navigation">
            <!--Mobile Nav Toggle-->
            <button class="cs-toggle" aria-label="mobile menu toggle">
                <div class="cs-box" aria-hidden="true">
                    <span class="cs-line cs-line1" aria-hidden="true"></span>
                    <span class="cs-line cs-line2" aria-hidden="true"></span>
                    <span class="cs-line cs-line3" aria-hidden="true"></span>
                </div>
            </button>
            <!-- We need a wrapper div so we can set a fixed height on the cs-ul in case the nav list gets too long from too many dropdowns being opened and needs to have an overflow scroll. This wrapper acts as the background so it can go the full height of the screen and not cut off any overflowing nav items while the cs-ul stops short of the bottom of the screen, which keeps all nav items in view no matter how mnay there are-->
            <div class="cs-ul-wrapper">
                <ul id="cs-expanded" class="cs-ul" aria-expanded="false">
                    <li class="cs-li">
                        <a href="" class="cs-li-link cs-active">
                            Inicio
                        </a>
                    </li>
                    <li class="cs-li">
                        <a href="" class="cs-li-link">
                            Matrículas
                        </a>
                    </li>
                    <!--Copy and paste this cs-dropdown list item and replace any .cs-li with this cs-dropdown group to make a new dropdown and it will work-->
                    <li class="cs-li cs-dropdown" tabindex="0">
                        <span class="cs-li-link">
                            O colégio
                            <img class="cs-drop-icon" src="https://csimg.nyc3.cdn.digitaloceanspaces.com/Icons/down-gold.svg" alt="dropdown icon" width="15" height="15" decoding="async" aria-hidden="true">
                        </span>
                        <ul class="cs-drop-ul">

                            <li class="cs-drop-li">
                                <a href="" class="cs-li-link cs-drop-link">Nossa história</a>
                            </li>

                            <li class="cs-drop-li">
                                <a href="" class="cs-li-link cs-drop-link">Projeto pedagógico</a>
                            </li>

                            <li class="cs-drop-li">
                                <a href="" class="cs-li-link cs-drop-link">Escola de esportes</a>
                            </li>

                            <li class="cs-drop-li">
                              <a href="" class="cs-li-link cs-drop-link">Poli</a>
                            </li>

                            <li class="cs-drop-li">
                              <a href="/contato" class="cs-li-link cs-drop-link">Contato</a>
                            </li>
                        </ul>
                    </li>

                    <li class="cs-li cs-dropdown" tabindex="0">
                        <span class="cs-li-link">
                            Segmentos
                            <img class="cs-drop-icon" src="https://csimg.nyc3.cdn.digitaloceanspaces.com/Icons/down-gold.svg" alt="dropdown icon" width="15" height="15" decoding="async" aria-hidden="true">
                        </span>
                        <ul class="cs-drop-ul">

                            <li class="cs-drop-li">
                                <a href="" class="cs-li-link cs-drop-link">Educação infantil</a>
                            </li>

                            <li class="cs-drop-li">
                                <a href="" class="cs-li-link cs-drop-link">Ed.fundamental anos iniciais</a>
                            </li>

                            <li class="cs-drop-li">
                                <a href="" class="cs-li-link cs-drop-link">Ed.Fundamental anos finais</a>
                            </li>

                            <li class="cs-drop-li">
                              <a href="" class="cs-li-link cs-drop-link">Ensino médio</a>
                          </li>
                        </ul>
                    </li>

                    <li class="cs-li cs-dropdown" tabindex="0">
                        <span class="cs-li-link">
                            Acontece no CSFA
                            <img class="cs-drop-icon" src="https://csimg.nyc3.cdn.digitaloceanspaces.com/Icons/down-gold.svg" alt="dropdown icon" width="15" height="15" decoding="async" aria-hidden="true">
                        </span>
                        <ul class="cs-drop-ul">

                            <li class="cs-drop-li">
                                <a href="" class="cs-li-link cs-drop-link">Notícias</a>
                            </li>

                            <li class="cs-drop-li">
                                <a href="" class="cs-li-link cs-drop-link">CSFA online</a>
                            </li>

                            <li class="cs-drop-li">
                                <a href="" class="cs-li-link cs-drop-link">CSFA Revista</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="cs-button-group">
          <!-- Icone drop restrict area -->
            <span class="material-symbols-outlined">  
              lock
            </span>

            <p>Área restrita</p>

            <ul class="cs-list cs-dropdown-group">

              <li class="cs-item">
                  <a class="cs-link" href="#">

                    <span class="material-symbols-outlined">
                      terminal
                      </span>

                      Texto do botão
                  </a>
              </li>

              <li class="cs-item">
                    <a class="cs-link" href="#">

                      <span class="material-symbols-outlined">
                        terminal
                        </span>

                        Texto do botão
                    </a>
              </li>

              <li class="cs-item">
                    <a class="cs-link" href="#">

